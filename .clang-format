# .clang-format â€” 4-space, arg-per-line, constructor+requires style
BasedOnStyle: LLVM

# --- Global indentation / tabs ---
IndentWidth: 4
ContinuationIndentWidth: 4
TabWidth: 4
UseTab: Never

# --- Parens spacing ---
SpacesInParentheses: true
SpaceInEmptyParentheses: false
SpacesInCStyleCastParentheses: true
SpaceAfterCStyleCast: true
SpaceBeforeParens: ControlStatements

# --- Braces ---
BreakBeforeBraces: Custom
BraceWrapping:
  AfterClass: true
  AfterControlStatement: true     # NEW: control structures open brace on new line
  AfterEnum: true
  AfterFunction: true
  AfterNamespace: true
  AfterStruct: true
  AfterUnion: true
  BeforeCatch: true
  BeforeElse: true
  BeforeLambdaBody: false         # NEW: lambda opening brace stays on same line
  IndentBraces: false
  SplitEmptyFunction: false
  SplitEmptyRecord: false
  SplitEmptyNamespace: false
SpaceInEmptyBlock: false

# --- Keep short/no-brace statements on one line ---
AllowShortIfStatementsOnASingleLine: AllIfsAndElse
AllowShortLoopsOnASingleLine: true
AllowShortCaseLabelsOnASingleLine: true
AllowShortBlocksOnASingleLine: Always
AllowShortFunctionsOnASingleLine: All
AllowShortLambdasOnASingleLine: None  # NEW: forbid single-line lambdas
InsertBraces: false                   # tip: set to true if you want braces auto-inserted

# --- Wrapping / alignment ---
AlwaysBreakTemplateDeclarations: Yes
ColumnLimit: 120
BinPackArguments: false
BinPackParameters: false
AlignAfterOpenBracket: Align
AllowAllArgumentsOnNextLine: false
AllowAllParametersOfDeclarationOnNextLine: false
PenaltyBreakBeforeFirstCallParameter: 1
PenaltyBreakString: 50

# --- Concepts / requires ---
RequiresClausePosition: OwnLine

# --- Constructors: params + initializer list ---
ConstructorInitializerAllOnOneLineOrOnePerLine: true
PackConstructorInitializers: Never
BreakConstructorInitializers: BeforeComma
ConstructorInitializerIndentWidth: 4

# --- Alignment ---
DerivePointerAlignment: false
PointerAlignment: Right
ReferenceAlignment: Right

# --- Include sorting & grouping ---
SortIncludes: true
IncludeBlocks: Regroup
IncludeCategories:
  - Regex: '^(<|")(win([[:alnum:]_]+)?\.h|windows\.h|dwmapi\.h|shellapi\.h|sh[a-z0-9_]*\.h|commctrl\.h|ole[a-z0-9_]*\.h|objbase\.h)("?>)$'
    Priority: 1
    SortPriority: 1
  - Regex: '^(<|")X11/.*("?>)$'
    Priority: 2
    SortPriority: 2
  - Regex: '^(<|")wayland-[a-z0-9_]+\.h("?>)$'
    Priority: 3
    SortPriority: 3
  - Regex: '^<([a-z0-9_]+|c[a-z0-9_]+)(\.h)?>$'
    Priority: 4
    SortPriority: 4
  - Regex: '^<[^">]*/[^">]*>$'
    Priority: 5
    SortPriority: 5
  - Regex: '^(<|")(halo/.*)("?>)$'
    Priority: 7
    SortPriority: 6
  - Regex: '^(<|")(halo/private/.*)("?>)$'
    Priority: 6
    SortPriority: 7
  - Regex: '.*'
    Priority: 8
    SortPriority: 8
IncludeIsMainRegex: '([-_A-Za-z0-9]+)\.(h|hh|hpp|hxx)'

# --- Padding & access labels ---
KeepEmptyLinesAtTheStartOfBlocks: true
MaxEmptyLinesToKeep: 1
EmptyLineBeforeAccessModifier: LogicalBlock
AccessModifierOffset: -4
IndentAccessModifiers: false
